<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/session_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/session_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:00"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/session_desc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit hey there."
            android:textColor="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/session_name_text" />

        <TextView
            android:id="@+id/session_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="15 May 2021"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/session_desc_text" />

        <LinearLayout
            android:id="@+id/images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/session_date_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/session_date_text">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img_3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginHorizontal="2dp"
                android:src="@color/red"
                android:visibility="gone" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginHorizontal="2dp"
                android:src="@color/red"
                android:visibility="gone" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginHorizontal="2dp"
                android:src="@color/red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/additional_users"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/round_text"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="+12"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>